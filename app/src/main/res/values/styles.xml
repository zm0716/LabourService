<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="AppBackTheme"  parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!--<item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>-->
    </style>

    <style name="FullBleedTheme" parent="android:Theme.Light.NoTitleBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.Light.Dialog8" parent="FullBleedTheme">
        <item name="android:windowBackground">@color/color_text_selected</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="ActionBarTheme" parent="android:Theme.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <style name="dialog2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFrame">@null</item> <!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item> <!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item> <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>  <!--模糊-->
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item> <!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item> <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>  <!--模糊-->

    </style>

    <style name="CustomProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog_trans" parent="dialog">
        <item name="android:backgroundDimEnabled">false</item>  <!--模糊-->
    </style>

    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_gone</item>
    </style>

    <style name="title_above_setting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="text_color_gray">
        <item name="android:textColor">@color/gray_999999</item>
    </style>

    <style name="text_color_blue">
        <item name="android:textColor">@color/blue_0079e4</item>
    </style>

    <style name="inspection_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="inspection_item_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">75dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/black_333333</item>
    </style>

    <style name="inspection_item_text_right">
        <item name="android:lineSpacingExtra">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="inspection_item_gray" parent="inspection_item_text_right">
        <item name="android:textColor">@color/gray_999999</item>
    </style>

    <style name="inspection_item_blue" parent="inspection_item_text_right">
        <item name="android:textColor">@color/blue_0079e4</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--自定义pop动画样式-->
    <!--启动动画windowEnterAnimation-->
    <!--退出动画windowExitAnimation-->
    <style name="pop_animatiom_style">
        <item name="android:windowEnterAnimation">@anim/pop_show</item>
        <item name="android:windowExitAnimation">@anim/pop_hide</item>

    </style>
    <!-- 对话框样式 -->
    <style name="Theme.Light.Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
    <!-- 弹出框动画 由下至上 -->
    <style name="dialogStyle" parent="@android:style/Animation.Dialog">
        <item name="@android:windowEnterAnimation">@anim/tan</item>
        <!-- 进入时的动画 -->
        <item name="@android:windowExitAnimation">@anim/tui</item>
        <!-- 退出时的动画 -->
    </style>
</resources>
