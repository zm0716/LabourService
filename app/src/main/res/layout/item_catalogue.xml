<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="14dp"
    android:id="@+id/buju"
    android:paddingRight="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/item_catalogue_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="安全评价"
            android:textColor="@color/black_333333"
            android:textSize="17dp" />
        <com.flyco.roundview.RoundTextView
            android:id="@+id/item_catalogue_rtv_multi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp"
            android:text="批量"
            android:textColor="@color/white"
            android:textSize="13dp"
            app:rv_backgroundColor="@color/blue_349fff"
            app:rv_cornerRadius="5dp" />
        <LinearLayout
            android:id="@+id/item_catalogue_ll_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
         >

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/item_catalogue_tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(1/57)"
                android:textColor="@color/gray_999999"
                android:textSize="17dp" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:layout_marginLeft="18dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_arrow_right" />

        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_d2d2d2" />
</LinearLayout>