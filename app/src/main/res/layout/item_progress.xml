<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:background="@android:color/white"
    android:padding="14dp"
    app:rv_backgroundColor="@android:color/white"
    app:rv_cornerRadius="5dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/portrait" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="11dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_progress_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="王大石的施工进度"
                android:textColor="@color/black_333333"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_progress_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:20"
                android:textColor="@color/gray_999999"
                android:textSize="12dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_progress_tv_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="三沙路公寓项目"
            android:textColor="@color/black_333333"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/item_progress_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="三沙路公寓项目"
            android:textColor="@color/gray_999999"
            android:textSize="12dp" />
    </LinearLayout>
</com.flyco.roundview.RoundLinearLayout>