<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:rv_backgroundColor="@android:color/white"
    app:rv_cornerRadius_TL="5dp"
    app:rv_cornerRadius_TR="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.5dp"
            android:layout_weight="1"
            android:text="选择地区"
            android:textColor="#ff33a0ff"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/m_add_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:text="取消"
            android:textColor="@color/black_333333"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/m_add_address"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_two"
            android:gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/gray_eeeeee" />


    <LinearLayout
        android:id="@+id/time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:weightSum="3">

        <com.agilefinger.labourservice.view.custom.MyNumberPicker
            android:id="@+id/monthpicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_weight="1" />

        <com.agilefinger.labourservice.view.custom.MyNumberPicker
            android:id="@+id/hourpicker"
            android:layout_width="0dp"
            android:button="@null"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.agilefinger.labourservice.view.custom.MyNumberPicker
            android:id="@+id/minuteicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null" />

    </LinearLayout>

</com.flyco.roundview.RoundLinearLayout>