<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="14dp"
    android:paddingBottom="10dp"
    android:paddingRight="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/dialog_inspection_item_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1号点位信息"
            android:textColor="@color/blue_349fff"
            android:textSize="17dp" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/dialog_inspection_item_rtv_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="上传本点位数据"
            android:textColor="@color/blue_349fff"
            android:textSize="13dp"
            app:rv_backgroundColor="@color/blue_d6ecff"
            app:rv_cornerRadius="5dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_d2d2d2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical">H

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="检测位置"
            android:textColor="@color/black_333333"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/dialog_inspection_item_tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="设置位置"
            android:textColor="@color/blue_349fff"
            android:textSize="17dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_d2d2d2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="位置描述"
            android:textColor="@color/black_333333"
            android:textSize="17dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:background="@null"
            android:id="@+id/miaoshu"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/gray_999999"
            android:textSize="17dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_d2d2d2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="检测结果"
            android:textColor="@color/black_333333"
            android:textSize="17dp" />
        <RadioGroup

            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:padding="8dp"
                android:text="合格"
                android:button="@null"
                android:id="@+id/hege"
                android:textColor="#666666"
                android:textSize="13dp"
                android:background="@drawable/xuanzhong"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:button="@null"
                android:id="@+id/buhege"
                android:text="不合格"
                android:textColor="#666666"
                android:textSize="13dp"
                android:background="@drawable/xuanzhong" />
        </RadioGroup>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"


            android:id="@+id/jieguo"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/gray_999999"
            android:textSize="17dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_d2d2d2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="影像留存"
            android:textColor="@color/black_333333"
            android:textSize="17dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialog_inspection_item_rv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_d2d2d2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="说明备注"
            android:textColor="@color/black_333333"
            android:textSize="17dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:minHeight="60dp"


            android:maxLength="100"
            android:id="@+id/shuoming"
            android:paddingRight="5dp"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/gray_999999"
            android:textSize="17dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#fff"
        ></LinearLayout>

</LinearLayout>