<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.flyco.roundview.RoundTextView
        android:id="@+id/dialog_data_collection_result_rtv_position"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="设置检测位置"
        android:textColor="@color/black_333333"
        android:textSize="13dp"
        app:rv_backgroundColor="@android:color/white"
        app:rv_isRippleEnable="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_d2d2d2" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/dialog_data_collection_result_rtv_illustration"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="编辑检测说明"
        android:textColor="@color/black_333333"
        android:textSize="13dp"
        app:rv_backgroundColor="@android:color/white"
        app:rv_isRippleEnable="true" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/dialog_data_collection_result_rtv_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/black_333333"
        android:textSize="13dp"
        app:rv_backgroundColor="@android:color/white"
        app:rv_isRippleEnable="true" />
</LinearLayout>