<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relayout_one"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/text_louhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="A1"
            android:textColor="@color/black_333333"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/text_louhao"
            android:layout_marginTop="11dp"
            android:background="@color/gray_d7d7d7"

            />
        <!--<RadioGroup-->
        <!--android:id="@+id/radio_pop"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="horizontal"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--&gt;-->
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/button_qx"
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_pop"
                android:button="@null"
                android:gravity="center"
                android:text="保温"
                android:textColor="@drawable/shape_text_pop"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/button_wc"
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_pop"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="涂料"
                android:textColor="@drawable/shape_text_pop"
                android:textSize="15sp" />
        </LinearLayout>

        <!--</RadioGroup>-->
    </RelativeLayout>
</LinearLayout>
