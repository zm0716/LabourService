<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_2093ff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="37.5dp"
        android:layout_marginRight="37.5dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/logo" />

        <ImageView
            android:layout_width="93dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/logo_text" />

        <com.flyco.roundview.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:gravity="center"

            android:paddingRight="14dp"
            app:rv_backgroundColor="@android:color/white"
            app:rv_cornerRadius="5dp">

            <ImageView
                android:layout_width="47dp"
                android:layout_height="20dp"
                android:src="@mipmap/user" />

            <View
                android:layout_width="2dp"
                android:layout_height="21dp"
                android:background="@color/gray_cccccc" />

            <EditText
                android:id="@+id/activity_login_pwd_et_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:hint="手机号码/用户名"
                android:inputType="text"
                android:paddingLeft="14dp"
                android:text="18600090000"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/gray_cccccc"
                android:textSize="13dp" />


        </com.flyco.roundview.RoundLinearLayout>

        <com.flyco.roundview.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingRight="14dp"
            app:rv_backgroundColor="@android:color/white"
            app:rv_cornerRadius="5dp">

            <ImageView
                android:layout_width="47dp"
                android:layout_height="20dp"
                android:src="@mipmap/lock" />

            <View
                android:layout_width="2dp"
                android:layout_height="21dp"
                android:background="@color/gray_cccccc" />

            <EditText
                android:id="@+id/activity_login_pwd_et_pwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="登录密码"
                android:inputType="textPassword"
                android:paddingLeft="14dp"
                android:text="123456"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/gray_cccccc"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/activity_login_pwd_iv_eye"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/eye_close" />

        </com.flyco.roundview.RoundLinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:id="@+id/activity_login_pwd_tv_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="忘记密码"
                android:textColor="@android:color/white"
                android:textSize="13dp" />

        </LinearLayout>

        <com.flyco.roundview.RoundTextView
            android:id="@+id/activity_login_pwd_rtv_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/black_333333"
            android:textSize="13dp"
            android:textStyle="bold"
            app:rv_backgroundColor="@color/yellow_fecb1b"
            app:rv_cornerRadius="5dp" />

        <TextView
            android:id="@+id/activity_login_pwd_tv_login_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="手机验证码登录"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:textStyle="bold"
            android:visibility="visible" />

    </LinearLayout>

</RelativeLayout>

